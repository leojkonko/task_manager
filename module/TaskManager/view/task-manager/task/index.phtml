<script>
    function completeTask(id) {
        const confirmMessage = '🏆 Marcar esta tarefa como concluída?';
        
        if (confirm(confirmMessage)) {
            // Mostrar loading toast
            if (typeof showInfoToast === 'function') {
                showInfoToast('⏳ Processando...', 'Aguarde');
            }
            
            fetch(`/tasks/complete/${id}`, {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        if (typeof showSuccessToast === 'function') {
                            showSuccessToast('🏆 Parabéns! Tarefa marcada como concluída.', 'Sucesso!');
                        }
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        if (typeof showErrorToast === 'function') {
                            showErrorToast(data.message || '😓 Algo não saiu como esperado.', 'Ops!');
                        } else {
                            alert('Erro: ' + data.message);
                        }
                    }
                })
                .catch(error => {
                    if (typeof showErrorToast === 'function') {
                        showErrorToast('😓 Erro de conexão. Tente novamente.', 'Erro de Rede');
                    } else {
                        alert('Erro ao completar tarefa');
                    }
                });
        }
    }

    function duplicateTask(id) {
        const confirmMessage = '📋 Duplicar esta tarefa?';
        
        if (confirm(confirmMessage)) {
            // Mostrar loading toast
            if (typeof showInfoToast === 'function') {
                showInfoToast('⏳ Duplicando tarefa...', 'Aguarde');
            }
            
            fetch(`/tasks/duplicate/${id}`, {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        if (typeof showSuccessToast === 'function') {
                            showSuccessToast('📋 Tarefa duplicada com sucesso! Uma nova tarefa foi criada.', 'Concluído!');
                        }
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        if (typeof showErrorToast === 'function') {
                            showErrorToast(data.message || '😓 Algo não saiu como esperado.', 'Ops!');
                        } else {
                            alert('Erro: ' + data.message);
                        }
                    }
                })
                .catch(error => {
                    if (typeof showErrorToast === 'function') {
                        showErrorToast('😓 Erro de conexão. Tente novamente.', 'Erro de Rede');
                    } else {
                        alert('Erro ao duplicar tarefa');
                    }
                });
        }
    }

    function deleteTask(id) {
        const confirmMessage = '🗑️ Tem certeza que deseja excluir esta tarefa?\n\nEsta ação não pode ser desfeita.';
        
        if (confirm(confirmMessage)) {
            // Mostrar loading toast
            if (typeof showInfoToast === 'function') {
                showInfoToast('⏳ Processando exclusão...', 'Aguarde');
            }
            
            fetch(`/tasks/delete/${id}`, {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        if (typeof showSuccessToast === 'function') {
                            showSuccessToast('🗑️ Tarefa excluída com sucesso!', 'Concluído!');
                        }
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        // Aqui é onde aparecerá a mensagem amigável sobre os 5 dias
                        if (typeof showErrorToast === 'function') {
                            showErrorToast(data.message || '😓 Algo não saiu como esperado.', 'Ops!');
                        } else {
                            alert('Erro: ' + data.message);
                        }
                    }
                })
                .catch(error => {
                    if (typeof showErrorToast === 'function') {
                        showErrorToast('😓 Erro de conexão. Tente novamente.', 'Erro de Rede');
                    } else {
                        alert('Erro ao excluir tarefa');
                    }
                });
        }
    }
</script>

