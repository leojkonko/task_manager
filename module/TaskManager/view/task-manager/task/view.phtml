<script>
    function completeTask(id) {
        if (confirm('Marcar esta tarefa como concluída?')) {
            fetch(`/tasks/complete/${id}`, {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Erro: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('Erro ao completar tarefa');
                });
        }
    }

    function duplicateTask(id) {
        if (confirm('Duplicar esta tarefa?')) {
            fetch(`/tasks/duplicate/${id}`, {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Tarefa duplicada com sucesso!');
                        window.location.href = '/tasks';
                    } else {
                        alert('Erro: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('Erro ao duplicar tarefa');
                });
        }
    }

    function deleteTask(id) {
        if (confirm('Tem certeza que deseja excluir esta tarefa? Esta ação não pode ser desfeita.')) {
            fetch(`/tasks/delete/${id}`, {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Tarefa excluída com sucesso!');
                        window.location.href = '/tasks';
                    } else {
                        alert('Erro: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('Erro ao excluir tarefa');
                });
        }
    }
</script>